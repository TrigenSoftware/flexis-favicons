{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"lib": [
			"esnext"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"src/index.ts"
	],
	"exclude": [
		"lib/**/*"
	]
}
