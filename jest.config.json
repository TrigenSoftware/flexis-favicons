{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"testRegex": "/test/.*\\.spec\\.ts$",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{ts,tsx}",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	],
	"globals": {
		"ts-jest": {
			"babelConfig": {
				"presets": [
					["env", {
						"modules": false,
						"targets": { "node": 6 }
					}],
					["stage-0"]
				],
				"plugins": [
					"transform-runtime"
				]
			}
		}
	}
}
